@{
    Layout = "_Layout";
}
@model Factory.Models.Engineer

<h1>Assign a machine to this engineer</h1>

<h3>Add a machine to this engineer: @Html.DisplayFor(model => model.EngineerName)</h3>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select Machine")
    @Html.DropDownList("MachineId")

    <input type="submit" value="Save" class="btn btn-success btn-sm" />
}
<br>
<p>@Html.ActionLink("Engineer roster", "Index", null, null, new {@class="btn btn-primary btn-sm"})</p>
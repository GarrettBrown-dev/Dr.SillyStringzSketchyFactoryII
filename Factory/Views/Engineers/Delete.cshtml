@{
    Layout = "_Layout";
}
@model Factory.Models.Engineer

<h3>Are you sure you want to remove this Engineer?</h3>
<hr />

<h3>Engineer Name: @Html.DisplayFor(model => model.EngineerName)</h3>

@using (Html.BeginForm())
{
    <br>
    <input type="submit" value="DELETE" class="btn btn-outline-warning btn-sm" />
}
<br>
<p>@Html.ActionLink("Cancel", "Details", null, new {id = Model.EngineerId}, new {@class="btn btn-outline-warning btn-sm"})</p>

@{
    Layout = "_Layout";
}
@model Factory.Models.Engineer

<h3>Edit engineer info for: @Html.DisplayFor(model => model.EngineerName)</h3>
<hr />
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)
    @Html.Label("Engineer Name")
    @Html.EditorFor(model => model.EngineerName,
        new {@required="required"})

    <input type="submit" value="Save Changes" />
}

<p>@Html.ActionLink("Back to engineer roster", "Index", null, null, new {@class="btn btn-primary btn-sm"})</p>
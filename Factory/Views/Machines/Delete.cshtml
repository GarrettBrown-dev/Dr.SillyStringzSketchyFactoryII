@{
    Layout = "_Layout";
}
@model Factory.Models.Machine

<h1>Are you sure you want to delete this machine?</h1>
<hr />
<h2>Machine Name: @Html.DisplayFor(model => model.MachineName)


    @using (Html.BeginForm())
    {
        <br>
        <input type="submit" value="DELETE" class="btn btn-outline-warning btn-sm" />
    }
    <br>
    <div>@Html.ActionLink("Cancel", "Details", null, new {id = Model.MachineId}, new {@class="btn btn-outline-warning btn-sm"})
    </div>
@{
    Layout = "_Layout";
}
@model Factory.Models.Machine

<h3>Edit Machine @Html.DisplayFor(model => model.MachineName)</h3>
<hr />
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)
    @Html.Label("Machine Name")
    @Html.EditorFor(model => model.MachineName,
        new {@required="required"})

    <input type="submit" value="Save Changes" />
}

<hr />
<p>@Html.ActionLink("Back to machines", "Index", null, null, new {@class="btn btn-primary btn-sm"})</p>
@{
    Layout = "_Layout";
}
@model Factory.Models.Machine

<h3>Add a new Machine</h3>
<hr />
@using (Html.BeginForm())
{
    @Html.Label("Machine name")
    @Html.TextBoxFor(model => model.MachineName, new {@required="required"})

    <br>

    @Html.Label("Machine Status (Functioning, Malfunctioning, Repairs Ongoing)")
    @Html.TextBoxFor(model => model.MachineStatus, new {@required="required"})

    <br>

    <input type="submit" value="Add a new Machine" class="btn btn-outline-warning btn-sm" />
}

<br>

<p>@Html.ActionLink("Show all Machines", "Index", null, null, new {@class="btn btn-outline-warning btn-sm"})</p>